#local-header-container
  #local-header.cf
    .light-bulb
      %a{ :href => "#{project_path(@media.project)}", :style => "background-image: url(/images/lightbulb_#{@media.project.color}.png);" }
    .video-title
      %h1= @media.name
    .video-carousel.cf
      %ul
        %li
          %img.arrow{ :src => '/images/left_arrow.png' }
        - 4.times do
          %li
            %img{ :src => '/images/empty_thumbnail_green.png' }
        %li
          %img.arrow{ :src => '/images/right_arrow.png' }

#video-container
  #video
    %iframe{ :src => "http://fast.wistia.com/embed/iframe/#{@media.hashed_id}?playerColor=#{@media.project.hex_color}", :width => 960, :height => 960 * @media.aspect_ratio, :style => "border: 0;" }

#video-info-container
  #video-info.cf
    #info
      .title= @media.name
      .description= @media.long_description.html_safe
    #disqus_thread
    :javascript
      /* * * CONFIGURATION VARIABLES: EDIT BEFORE PASTING INTO YOUR WEBPAGE * * */
      var disqus_shortname = 'wistialearning'; // required: replace example with your forum shortname
      var disqus_identifier = '#{@media.hashed_id}';

      /* * * DON'T EDIT BELOW THIS LINE * * */
      (function() {
        var dsq = document.createElement('script'); dsq.type = 'text/javascript'; dsq.async = true;
        dsq.src = 'http://' + disqus_shortname + '.disqus.com/embed.js';
        (document.getElementsByTagName('head')[0] || document.getElementsByTagName('body')[0]).appendChild(dsq);
      })();
    <a href="http://disqus.com" class="dsq-brlink">comments powered by <span class="logo-disqus">Disqus</span></a> 
