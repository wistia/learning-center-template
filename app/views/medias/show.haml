#local-header-container
  #local-header.cf
    .light-bulb
      %a{ :href => "#{project_path(@media.project)}" }
        %img{ :src => '/images/lightbulb.png' }
    .video-title
      %h1= @media.name
    .video-carousel.cf
      %ul
        %li
          %img.arrow{ :src => '/images/left_arrow.png' }
        - 4.times do
          %li
            %img{ :src => '/images/empty_thumbnail_green.png' }
        %li
          %img.arrow{ :src => '/images/right_arrow.png' }

#video-container
  #video
    %iframe{ :src => "http://fast.wistia.com/embed/iframe/#{@media.hashed_id}", :width => 960, :height => 445, :style => "border: 0;" }

#video-info-container
  #video-info.cf
    #info
      .title= @media.name
      .description= @media.description
    #disqus_thread
    :javascript
      /* * * CONFIGURATION VARIABLES: EDIT BEFORE PASTING INTO YOUR WEBPAGE * * */
      var disqus_shortname = 'wistialearning'; // required: replace example with your forum shortname

      /* * * DON'T EDIT BELOW THIS LINE * * */
      (function() {
        var dsq = document.createElement('script'); dsq.type = 'text/javascript'; dsq.async = true;
        dsq.src = 'http://' + disqus_shortname + '.disqus.com/embed.js';
        (document.getElementsByTagName('head')[0] || document.getElementsByTagName('body')[0]).appendChild(dsq);
      })();
