#local-header-container
  #local-header.cf
    .light-bulb
      %a{ :href => '/learning', :style => "background-image: url(/learning/images/lightbulb_#{@project.color}.png);" }
    .project-title
      %h1= @project.name
      .back_to_central
        %a{ :href => '/learning' } Back to Learning Central



    .project-description
      = @project.description.html_safe
#media-tiles-container
  #media-tiles.cf
    - @project.media.each do |m|
      .media-tile-container
        .media-tile
          %a{ :href => item_path(m) }
            %div{ :class => "thumbnail_color_#{@project.color}" }
              %img{ :src => "#{m.medium_thumbnail}" }
          .title
            %a{ :href => item_path(m) }= m.name
          .description= m.short_description.html_safe
          .info.cf
            .time
              .info-title Time
              .info-val{ :style => "color: ##{@project.hex_color}" }= m.duration_for_display
            .comments
              .info-title Comments
              .info-val
                %a{ :href => "#{item_path(m)}#disqus_thread", "data-disqus-identifier" => m.hashed_id, :style => "color: ##{@project.hex_color}" }

    .email-tile-container
      .email-tile
        %img{ :src => "/learning/images/email_#{@project.color}.png" }
        .title= "Stay up to date"
        .text= "Enter your email to stay up to date as we add more content to the Learning Center!"
        %form{ :action => "http://pages.wistia.com/l/9972/2013-01-21/bvxl2", :method => "post" }
          %input{ :type => "text", :name => "email", :value => "Email Address", :onblur => "if(this.value==''){this.value='Email Address'};", :onclick => "if(this.value=='Email Address'){this.value=''};" }
          %input{ :type => "submit", :value => "",  :style => "background: url('/learning/images/email_submit_#{@project.color}.png');" }

