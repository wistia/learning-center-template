:javascript
  $(function () {
    $(".media-tile").hover(

      function () {
        $(this).find(".description").hide();
        $(this).find(".info").show();
      },

      function () {
        $(this).find(".info").hide();
        $(this).find(".description").show();
      }

    );
  });
