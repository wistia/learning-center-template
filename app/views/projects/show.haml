#local-header-container
  #local-header.cf
    .light-bulb
      %a{ :href => root_url, :style => "background-image: url(/images/lightbulb_#{@project.color}.png);" }
    .project-title
      %h1= @project.name
    .project-description
      = @project.description.html_safe
#media-tiles-container
  #media-tiles.cf
    - @project.media.each do |m|
      .media-tile-container
        .media-tile
          %a{ :href => media_path(m) }
            %img{ :src => "#{m.medium_thumbnail}" }
          .title
            %a{ :href => media_path(m) }= m.name
          .description= m.short_description.html_safe
          .info.cf
            .time
              .info-title Time
              .info-val{ :style => "color: ##{@project.hex_color}" }= m.duration_for_display
            .comments
              .info-title Comments
              .info-val
                %a{ :href => "#{media_path(m)}#disqus_thread", "data-disqus-identifier" => m.hashed_id, :style => "color: ##{@project.hex_color}" }

:javascript
  /* * * CONFIGURATION VARIABLES: EDIT BEFORE PASTING INTO YOUR WEBPAGE * * */
  var disqus_shortname = 'wistialearning'; // required: replace example with your forum shortname

  /* * * DON'T EDIT BELOW THIS LINE * * */
  (function () {
      var s = document.createElement('script'); s.async = true;
      s.type = 'text/javascript';
      s.src = 'http://' + disqus_shortname + '.disqus.com/count.js';
      (document.getElementsByTagName('HEAD')[0] || document.getElementsByTagName('BODY')[0]).appendChild(s);
  }());

:javascript
  $(function () {
    $(".media-tile").hover(

      function () {
        $(this).find(".description").hide();
        $(this).find(".info").show();
      },

      function () {
        $(this).find(".info").hide();
        $(this).find(".description").show();
      }

    );
  });
