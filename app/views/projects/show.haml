:javascript
  $(function () {
    $(".media-tile").hover(

      function () {
        $(this).find(".description").hide();
        $(this).find(".info").show();
      },

      function () {
        $(this).find(".info").hide();
        $(this).find(".description").show();
      }

    );


    // this is to submit email addies to pardizzle, y'all
    $('.email-tile-container form').on('submit', function() {

      var email = $('.email-tile-container form .email').val();

      // no email, no problem
      if (email.indexOf('@') < 1) { return false; }

      // send to par-dee
      var pardotIframeSrc = "http://pages.wistia.com/l/9972/2013-01-21/bvxl2?email=" + escape(email) + "&learning_center_project=" + escape(document.title);
      $('.email-tile-container').append("<iframe src='" + pardotIframeSrc + "' style='width: 1px; height: 1px; border: 0;'></iframe>");

      $('.email-tile').addClass('flipped');

      return false;
    });
  });
