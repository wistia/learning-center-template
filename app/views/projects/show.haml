#local-header-container
  #local-header.cf
    .light-bulb
      %img{ :src => '/images/lightbulb.png' }
    .project-title
      %h1= @project.name
    .project-description
      = @project.description
#media-tiles-container
  #media-tiles.cf
    - @project.media.each do |m|
      .media-tile-container
        .media-tile
          %a{ :href => media_path(m) }
            %img{ :src => "#{m.medium_thumbnail}" }
          .title= m.name
          .description= m.description
