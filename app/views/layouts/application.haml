!!!
%html
  %head
    %title Wistia Learning Center
    = stylesheet_link_tag @stylesheet, :media => "all"
    = csrf_meta_tags
    = javascript_include_tag "jquery-1.8.3.min.js"
    = yield :html_head

  %body
    = render :partial => 'layouts/header'
    = yield
    = render :partial => 'layouts/footer'
    %img{ :src => '/learning/images/lil_lightbulb.png', :style => 'display: none;' }

    <script src="http://fast.wistia.com/static/E-v1.js"></script>
    <script src="http://fast.wistia.com/static/embed_shepherd-v1.js"></script>
    :javascript
      wistiaEmbeds.bind("conversion", function(video, type, data) {
        if (type === "pre-roll-email") {
          Wistia.localStorage("learning-center-email", data);
        }
      });

      wistiaEmbeds.onFind(function(video) {
        var email;
        if (email = Wistia.localStorage("learning-center-email")) {
          video.setEmail(email);
          video.rebuild();
        }
      });
