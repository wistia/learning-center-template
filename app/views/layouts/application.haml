!!!
%html
  %head
    %title= @title || 'Wistia Learning Center'
    = stylesheet_link_tag @stylesheet, :media => "all"
    = csrf_meta_tags
    = javascript_include_tag "jquery-1.8.3.min.js"
    = yield :html_head

    <script src="http://fast.wistia.com/static/E-v1.js"></script>
    <script src="http://fast.wistia.com/static/embed_shepherd-v1.js"></script>
    :javascript
      window.setEmail = function(email) {
        Wistia.localStorage("learning-center-email", email);
      };

      window.getEmail = function() {
        return Wistia.localStorage("learning-center-email");
      };

      wistiaEmbeds.onFind(function(video) {
        var email;
        if (email = window.getEmail()){
          video.setEmail(email);
          video.reinitializePlugins();
        }

        // conditionally autoplay
        if (/\?.*autoplay/i.test(location.href)) {
          video.play();
        }
      });
      
      wistiaEmbeds.bind("conversion", function(video, type, data) {
        if (type === "post-roll-email") {
          setEmail(data);
        }
      });


  %body
    = render :partial => 'layouts/header'
    = yield
    = render :partial => 'layouts/footer'
    %img{ :src => '/learning/images/lil_lightbulb.png', :style => 'display: none;' }

    = clicky_tracking_code
